<% content_for :title, "Cars Search" %>

<div class="w-full">
  <!-- Header -->
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">Cars search</h1>
    <p class="text-gray-600">
      Powered by
      <span class="inline-flex items-center gap-1">
        Ruby On Rails
      </span>
      &amp;
      <span class="inline-flex items-center gap-1">
        type<strong>sense</strong>
      </span>
    </p>
  </div>

  <!-- Search form -->
  <%= form_with url: cars_path, method: :get, class: "mb-6" do |f| %>
    <div class="relative">
      <%= f.text_field :q,
          value: params[:q],
          placeholder: "A honda or BMW with at least 200hp, rear wheel drive, from 20K to 50K, must be newer than 2014",
          class: "w-full border border-gray-300 rounded-lg px-4 py-3 pr-12 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 bg-gray-900 text-white p-2 rounded cursor-pointer hover:bg-gray-700">
        <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </button>
    </div>
  <% end %>

  <% if params[:q].present? %>
    <!-- Search query display -->
    <div class="font-mono text-sm text-gray-600 mb-4 break-all">
      Searching for: "<%= params[:q] %>"
    </div>
  <% end %>

  <!-- Lazy-loaded search results -->
  <%= turbo_frame_tag "search_results", src: search_cars_path(q: params[:q]), loading: :lazy do %>
    <!-- Skeleton placeholder while loading -->
    <div id="nl-params-placeholder" class="bg-gray-100 rounded-lg p-4 mb-6 animate-pulse">
      <div class="h-3 bg-gray-300 rounded w-32 mb-2"></div>
      <div class="h-4 bg-gray-300 rounded w-full"></div>
    </div>

    <p class="font-bold text-gray-900 mb-6">Loading results...</p>

    <div id="cars" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% 12.times do %>
        <%= render "skeleton" %>
      <% end %>
    </div>
  <% end %>
</div>
